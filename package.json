{
  "name": "@universal-claude-router/cli",
  "version": "0.1.0",
  "description": "Universal Claude Router - Route Claude Code to 75+ LLM providers",
  "keywords": [
    "claude",
    "claude-code",
    "llm",
    "router",
    "anthropic",
    "openai",
    "ollama",
    "ai",
    "proxy",
    "github-copilot"
  ],
  "homepage": "https://github.com/jamesthegreati/universal-claude-router",
  "repository": {
    "type": "git",
    "url": "https://github.com/jamesthegreati/universal-claude-router.git"
  },
  "bugs": {
    "url": "https://github.com/jamesthegreati/universal-claude-router/issues"
  },
  "author": "jamesthegreati",
  "license": "MIT",
  "private": false,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "bin": {
    "ucr": "./packages/cli/dist/cli.js",
    "universal-claude-router": "./packages/cli/dist/cli.js"
  },
  "files": [
    "packages/cli/dist/**/*",
    "packages/core/dist/**/*",
    "packages/shared/dist/**/*",
    "packages/*/package.json",
    "README.md",
    "LICENSE",
    "install.sh"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepublishOnly": "npm run build",
    "publish:npm": "./scripts/publish.sh",
    "release": "./scripts/release.sh"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "prettier": "^3.2.5",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0"
  }
}
